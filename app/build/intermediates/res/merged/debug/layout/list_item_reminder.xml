<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_activated"
    android:padding="6dp" >

    <CheckBox
        android:id="@+id/reminder_list_item_remindedCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:focusable="false"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/reminder_list_item_replyTextView"
        android:layout_alignTop="@+id/reminder_list_item_titleTextView"
        android:button="@null"
        android:background="@null"
        android:drawableLeft="@drawable/custom_checkbox_design"/>

    <TextView
        android:id="@+id/reminder_list_item_titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/snozeImageView"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="ReminerTitle"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/reminder_list_item_dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp"
        android:text="ReminderDate"
        android:textSize="16sp"
        android:layout_weight="1"
        android:layout_below="@+id/reminder_list_item_titleTextView"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/snozeImageView"/>

    <TextView
        android:id="@+id/reminder_list_item_replyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp"
        android:text="ReminderReply"
        android:textSize="16sp"
        android:layout_weight="1"
        android:layout_below="@+id/reminder_list_item_dateTextView"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/snozeImageView"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/snozeImageView"
        android:src="@mipmap/today_reminder2"
        android:minHeight="35dp"
        android:minWidth="35dp"
        android:layout_toStartOf="@+id/reminder_list_item_remindedCheckBox"
        android:layout_toLeftOf="@+id/reminder_list_item_remindedCheckBox"
        android:layout_alignTop="@+id/reminder_list_item_remindedCheckBox"
        android:layout_alignBottom="@+id/reminder_list_item_replyTextView"/>


</RelativeLayout><!-- From: file:/D:/Repository/Reminder/app/src/main/res/layout/list_item_reminder.xml -->